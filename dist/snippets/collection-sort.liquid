<!-- /snippets/collection-sort.liquid -->

{% assign sort_options = 'manual,best-selling,title-ascending,title-descending,price-ascending,price-descending' | split: ',' %}

<div class="CollectionSort select-wrapper">
  <select name="SortBy" {% if type=='main' %} data-sort {% else %} data-sort-sub {% endif %}>
    <option selected disabled>Sort By</option>
    {% for option in sort_options %}
      <option value="{{ option }}"{% if collection.sort_by == blank and collection.default_sort_by == option %} selected="selected"{% elsif collection.sort_by == option %} selected="selected"{% endif %}>{{ 'collection.sort.' | append: option | t }}</option>
    {% endfor %}
  </select>
</div>
