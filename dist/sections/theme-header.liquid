<!-- /snippets/theme-header.liquid -->
<header class="Header" role="banner">
  <div class="container xl">
    <div class="row Header__row">
      <div class="Header__nav column l5">
        {% include 'theme-nav-main' %}
      </div>
      <div class="Header__logo column l2">
        {% include 'theme-logo' %}
      </div>
      <div class="Header__user column l5">
        {% include 'form-search' %}
        {% if customer %}
          <a class="Header__user-link" href="/account" data-trigger="popup" data-target="#PopupAccount">{{ 'account.general.title' | t }}</a>
        {% else %}
          <a class="Header__user-link" href="/account"><i class="icon flaticon-profile"></i></a>
        {% endif %}
        <a class="Header__user-link" href="/cart"><i class="icon flaticon-business"></i></a>
      </div>
      <div class="s-show margin-top-2x">
        <a href="#NavToggled" data-trigger="popup" data-target="#NavToggled">
          {{ 'common.menu' | t }}
        </a>
      </div>
    </div>
  </div>
</header>

{% include 'theme-nav-toggled' %}

{% schema %}
  {
    "name": "Header",
    "settings": [
      {
        "type": "header",
        "content": "Header"
      },
      {
        "type": "checkbox",
        "id": "enable_search",
        "label": "Enable search",
        "default": true
      }
    ]
  }
{% endschema %}
