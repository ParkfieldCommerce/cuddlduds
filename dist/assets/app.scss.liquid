/* Toggle Side Menu ==========================================================*/

.theme-nav-toggled {
  z-index: 9995;
  position: fixed;
  width: 100%;
  max-width: 100%;
  height: 100%;
  padding: $gutter;
  @include transition-property(); // For legacy support
  @include prefixer(transition-duration, 0.3s);
  @include prefixer(transition-delay, 0.3s);
  &.from-left {
    top: 0;
    left: 0;
    @include prefixer(transform, translate3d(-100%, 0, 0));
    max-width: 350px;
  }
  &.from-right {
    top: 0;
    right: 0;
    @include prefixer(transform, translate3d(100%, 0, 0));
  }
  &.from-bottom {
    bottom: 0;
    @include prefixer(transform, translate3d(0, 100%, 0));
  }
  &.from-top {
    bottom: 0;
    @include prefixer(transform, translate3d(0, -100%, 0));
  }
  &.visible {
    @include prefixer(transform, translate3d(0, 0, 0));
    overflow: auto;
    -webkit-overflow-scrolling: touch;
  }

  // Demo styling
  background-color: $colorText;
  color: $colorBackground;
  a {
    color: $colorBackground;
  }
  .nav-toggled-close {
    display: block;
    position: absolute;
    top: $gutter/2;
    right: $gutter/2;
  }
  &.from-left, &.from-right { width: 400px; max-width: 90%; }
}

/* Popups ====================================================================*/

/// Basic popup styling
.popup {
  position: fixed;
  z-index: 9996;
  opacity: 0;
  visibility: hidden;
  @include transition();
  .fa-2x{
    font-size: 2rem;
  }
  .fa-times-thin:before {
    content: '\00d7';
  }
  &.visible {
    opacity: 1;
    visibility: visible;
    @include transition();
  }
  .popup-content {
    display: inline-block;
    z-index: 9999;
    max-width: 100%;
    max-height: 100%;
    overflow: auto; // Optional line for overly tall popups
    padding: $gutter;
    background-color: $bg-light;
    text-align: initial;
    cursor: default;
    white-space: initial;
    color: $colorText;
  }
  &.overlay {
    background: rgba($colorText, 0.85);
    @include overlay();
    .popup-outside {
      position: absolute;
      z-index: 9998;
      @include overlay();
    }
    .popup-inner {
      -webkit-backface-visibility: hidden;
      cursor: pointer;
      z-index: 9997;
      text-align: center;
      white-space: nowrap;
      @include overlay();
      @include prefixer(transition-delay, 0.3s);
      @include prefixer(transform, translateY(-$gutter/2));
      @include transition();
    }
    .popup-content {
      @include vertical-align();
    }
    &.visible {
      .popup-inner {
        @include prefixer(transform, translateY(0px));
      }
    }
  }
  &.notification {
    .popup-content {
      position: fixed;
      bottom: $gutter;
      left: $gutter;
      padding: $gutter/2;
      @include prefixer(transition-delay, 0.3s);
      @include prefixer(transform, translateY(-$gutter/2));
      @include transition();
    }
    &.visible {
      .popup-content {
        @include prefixer(transform, translateY(0px));
      }
    }
  }
  .popup-close {
    display: block;
    position: absolute;
    top: $gutter/2;
    right: $gutter/2;
  }
}

