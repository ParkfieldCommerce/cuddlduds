<!-- /templates/page.contact.liquid -->

<div class="container s l-padding-top-5x m-padding-top-5x s-padding-top-3x padding-bottom-15x Contact">
  <div class="row">
    <div class="column l12 m12 s12 center">
      <div class="Contact__inner-content left">
      <h1 class="Contact__heading">{{ page.title }}</h1>

      <div class="Contact__rte rte">
        {{ page.content }}
        <div class="Contact__links">
        <div class="Contact__link">
          <img class="Contact__link-image" src="{{'phone.png' | asset_url}}" alt="Phone"><a href="tel:{{settings.contact_phone}}">{{settings.contact_phone | replace:'-','.' | replace:' ','.'}}</a>
        </div>
        <div class="Contact__link">
          <img class="Contact__link-image" src="{{'email.png' | asset_url}}" alt="Email"><a href="mailto:{{settings.contact_email}}">{{settings.contact_email}}</a>
        </div>
        </div>
      </div>
      </div>
    </div>
  </div>
</div>
